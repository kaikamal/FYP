<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Base.Theme.LoginActivity" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
    </style>

    <style name="Theme.LoginActivity" parent="Base.Theme.LoginActivity" />

    <style name="Theme.LoginActivity.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LoginActivity.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LoginActivity.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="ScreenBackground"><item name="android:background">@color/white</item></style>
    <style name="CardBackground"><item name="android:background">@color/white</item></style>

    <!-- Text color styles -->
    <style name="TextColor">
        <item name="android:textColor">@color/lavender</item>
    </style>
    <style name="TextColor.Dark">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Light theme -->
    <style name="Theme.LoginActivity.Light" parent="Base.Theme.LoginActivity">
        <!-- Customize your light theme here. -->
        <item name="android:textColor">@color/lavender</item>
    </style>

    <!-- Dark theme -->
    <style name="Theme.LoginActivity.Dark" parent="Base.Theme.LoginActivity">
        <!-- Customize your dark theme here. -->
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
