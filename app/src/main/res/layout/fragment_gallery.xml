<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="16dp">

    <!-- RecyclerView to display notifications -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewNotifications"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"/>

    <!-- Sample Notification Item Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/purple"
        android:layout_centerInParent="true">

    <TextView
        android:id="@+id/textViewNotificationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="System Message"
        android:textSize="18sp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/textViewNotificationContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the Smart Solar Tracking System. Enjoy efficient energy management!"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"/>

</LinearLayout>

    </RelativeLayout>
